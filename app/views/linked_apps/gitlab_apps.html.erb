<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h3>Gitlab Organizations</h3>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>Username</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @gitlab_apps.each do |app| %>
              <tr>
                <td><%= app.username %></td>
                <td>
                  <%= link_to 'Delete', delete_linked_gitlab_app_path(app), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure?"} %>
                  <!-- TODO: Add more details here explaining that autobuilds will stop working -->
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- TODO: Pagination here -->
        <a href="<%= @gitlab_url %>" class="mb-3 btn btn-primary">Link a new Organization</a>
        <%= render partial: "partials/pagination", locals: { resources: @gitlab_apps, max_page: 10 } %>
      </div>
    </div>
  </div>
</div>

