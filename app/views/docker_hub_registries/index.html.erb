<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h2>Docker Hub Registries</h2>
      </div>
      <div class="card-body">
        <!-- TODO: Show info message here asking user to create an Autobuild -->
        <% if current_user.docker_hub_registries.empty? %>
        <% end %>
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Verification</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @docker_hub_registries.each do |registry| %>
              <tr>
                <td><%= registry.name %></td>
                <td><%= registry.description %></td>
                <td><%= registry.verification_status.titleize %></td>
                <td>
                  <%= link_to 'View/Edit', edit_docker_hub_registry_path(registry), class: 'btn btn-primary btn-sm' %>
                  <%= link_to 'Delete', docker_hub_registry_path(registry), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure?"} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Add Docker Hub Registry', new_docker_hub_registry_path, class: 'mb-3 btn btn-primary' %>
        <%= render partial: "partials/pagination", locals: { resources: @docker_hub_registries, max_page: 10 } %>
      </div>
    </div>
  </div>
</div>
