<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h2>Autobuilds</h2>
      </div>
      <div class="card-body">
        <!-- TODO: Show info message here asking user to create an Autobuild -->
        <% if current_user.autobuilds.empty? %>
        <% end %>
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @autobuilds.each do |autobuild| %>
              <tr>
                <td><%= autobuild.name %></td>
                <td><%= autobuild.description %></td>
                <td>
                  <%= link_to 'View/Edit', edit_autobuild_path(autobuild), class: 'btn btn-primary btn-sm' %>
                  <%= link_to 'Delete', autobuild_path(autobuild), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure?"} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Add Autobuild', new_autobuild_path, class: 'mb-3 btn btn-primary' %>
        <%= render partial: "partials/pagination", locals: { resources: @autobuilds, max_page: 10 } %>
      </div>
    </div>
  </div>
</div>
