<div style="max-width: 400px;" class="w-100 mx-auto card">
  <div class="card-header">
    <h2>Forgot your password?</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :email, class: 'h3' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="actions">
        <div class="row mb-3">
          <div class="col-lg-12">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-primary' %>
            <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
