<div class="row">
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h2>Settings</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group mb-3">
            <%= f.label :password, "New password", class: 'h3' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, "Confirm new password", class: 'h3' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.submit "Change my password", class: 'btn btn-primary' %>
          </div>

          <div class="form-group mb-3">
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-primary' %>
            <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-outline-primary' %>
          </div>

          <div class="form-group">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
